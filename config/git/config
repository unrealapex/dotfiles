[user]
	# These values are set in ~/.config/git/config.local
[include]
	 path = ~/.config/git/config.local
[credential]
	credentialStore = cache
[core]
	pager =  diff-so-fancy | less -RFX
	excludesfile = ~/.config/git/gitignore
[interactive]
	diffFilter = diff-so-fancy --patch
[pull]
	rebase = true
[merge]
	conflictstyle = diff3
[diff]
        algorithm = histogram
	folorMoved = default
	mnemonicPrefix = true
	renames = true
	colorMoved = plain
[push]
	autoSetupRemote = true
	followTags = true
[gpg]
	format = ssh
[commit]
	gpgsign = true
	verbose = true
[tag]
	gpgsign = true
	sort = version:refname
[alias]
	ci = commit
	st = status
	co = checkout
	br = branch
	di = diff
	up = pull
	undo=reset --soft HEAD^
	s = !git rev-list --all | xargs git grep -F
	last = log -1 HEAD --stat --patch
        l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset %Cgreen(%cr)' --abbrev-commit
	diff = diff --color-words

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[blame]
	date = relative
	coloring = highlightRecent
[column]
	ui = auto
[fetch]
	prune = true
	pruneTags = true
	all = true
[rebase]
	autoSquash = true
	autoStash = true
	updateRefs = true

# vim: filetype=gitconfig
